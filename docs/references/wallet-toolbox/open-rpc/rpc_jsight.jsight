  # UTXO Control Commands

  Method freeze // Freezes a specific UTXO, preventing it from being spent.
    Params
      [
        "a08e6907dbdb6e3c44a10b901b31f2f95e2ff8c732320bdb5d7105b98b2f96a0", // Transaction ID
        0 // Output index (vout)
      ]
    Result
